<!DOCTYPE html>
<html lang="ar" dir="rtl">


<head>
	<title>Education Master Template</title>
	<!-- META TAGS -->
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="description" content="Education master is one of the best educational html template, it's suitable for all education websites like university,college,school,online education,tution center,distance education,computer education">
	<meta name="keyword" content="education html template, university template, college template, school template, online education template, tution center template">
	<!-- FAV ICON(BROWSER TAB ICON) -->
	<link rel="shortcut icon" href="images/fav.ico" type="image/x-icon">
	<!-- GOOGLE FONT -->
	<link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700%7CJosefin+Sans:600,700" rel="stylesheet">
	<!-- FONTAWESOME ICONS -->
	<link rel="stylesheet" href="css/font-awesome.min.css">
	<!-- ALL CSS FILES -->
	<link href="css/materialize.css" rel="stylesheet">
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

	<link href="css/style.css" rel="stylesheet" />
	<!-- RESPONSIVE.CSS ONLY FOR MOBILE AND TABLET VIEWS -->
	<link href="css/style-mob.css" rel="stylesheet" />
	<!-- Bootstrap 5 from CDN -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

	<!-- Custom Tailwind CSS Styling -->
	<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.2/dist/tailwind.min.css" rel="stylesheet">

	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />


</head>

<body style="display: inline-grid;    width: 100%;">
	<!--HEADER SECTION-->
	<section>
		<!-- TOP BAR -->

		<nav class="bg-white shadow-lg fixed top-0 left-0 right-0 z-50 h-20">
			<div class=" mx-auto px-6 py-3 flex items-center justify-between h-full">
				<!-- Logo with Icon -->
				<a href="@Url.Action("Index", "Home")" class="flex items-center gap-2 text-3xl font-extrabold text-indigo-900">
					<svg class="w-14 h-14 " style="color:#f97316" fill="none" stroke="currentColor" stroke-width="3"
						 viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round"
							  d="M12 14l9-5-9-5-9 5 9 5z" />
						<path stroke-linecap="round" stroke-linejoin="round"
							  d="M12 14l6.16-3.422A12.083 12.083 0 0112 21.5a12.083 12.083 0 01-6.16-10.922L12 14z" />
					</svg>
					GoEdu
				</a>

				<!-- Menu (Desktop) -->
				<ul class="md:flex space-x-2 text-indigo-900 font-medium text-xl h-full items-center  h-25">
					<li class="relative group">
						<a href="@Url.Action("Index", "Home")" class="px-8 py-7 text-indigo-900 text-lg font-bold hover:bg-indigo-900 hover:text-white transition duration-300 ease-in-out h-full flex items-center">الرئيسية</a>
					</li>

					<li class="relative group">
						<a href="@Url.Action("Index", "Course")" class="px-8 py-7 text-indigo-900 text-lg font-bold hover:bg-indigo-900 hover:text-white transition duration-300 ease-in-out h-full flex items-center">الكورسات</a>
					</li>
					@if (User.IsInRole("Student"))
					{

						<li class="relative group">
							<a href="@Url.Action("DashBoard", "Student")" class="px-8 py-7 text-indigo-900 text-lg font-bold hover:bg-indigo-900 hover:text-white transition duration-300 ease-in-out h-full flex items-center">قائمتى</a>
						</li>
					}
					else if (User.IsInRole("Instructor"))
					{
						<li class="relative group">
							<a href="@Url.Action("DashBoard", "Instructor")" class="px-8 py-7 text-indigo-900 text-lg font-bold hover:bg-indigo-900 hover:text-white transition duration-300 ease-in-out h-full flex items-center">قائمتى</a>
						</li>
					}


				</ul>





				<div class="md:flex space-x-4 h-full items-center">
					@if (User.Identity.IsAuthenticated)
					{
						<a href="@Url.Action("Logout", "Account")" class="px-5 py-2 rounded-lg bg-indigo-900 text-white hover:bg-indigo-600 transition h-full flex items-center">تسجيل الخروج</a>
					}
					else
					{
						<a href="@Url.Action("Login", "Account")" class="px-5 py-2 rounded-lg bg-indigo-900 text-white hover:bg-indigo-600 transition h-full flex items-center">تسجيل الدخول</a>
						<a href="@Url.Action("Register", "Account")" class="px-5 py-2 rounded-lg border border-indigo-900 text-indigo-600 hover:bg-indigo-50 transition h-full flex items-center">تسجيل</a>
					}

				</div>

			<!-- Mobile Menu -->
			<div id="mobileMenu" class="md:hidden hidden bg-white border-t border-gray-200">
				<ul class="flex flex-col px-6 py-4 space-y-3 text-indigo-700 font-medium text-base">
					<li>
						<a href="@Url.Action("Index", "Home")" class="relative text-center group">
							<span class="block py-2">الرئيسية</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>
					<li>
						<a href="@Url.Action("Index", "Course")" class="relative text-center group">
							<span class="block py-2">الكورسات</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>
					<li>
						<a href="@Url.Action("Index", "Lecture")" class="relative text-center group">
							<span class="block py-2">المحاضرات</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>
					<li>
						<a href="@Url.Action("Contact", "Home")" class="relative text-center group">
							<span class="block py-2">تواصل معنا</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>
					<li class="mb-3">
						<a href="@Url.Action("Login", "Account")" class="relative text-center group">
							<span class="block py-2">تسجيل الدخول</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>
					<li>
						<a href="@Url.Action("Register", "Account")" class="relative text-center group">
							<span class="block py-2">تسجيل</span>
							<span class="absolute left-0 bottom-0 w-full h-1 bg-indigo-900 transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
						</a>
					</li>

				</ul>
			</div>

		</nav>


	</section>

	<!-- DISCOVER MORE -->
	<section style=" display: flex;
  justify-content: center; margin-top: 80px; width: 100%;margin-bottom: 50px;">
		<div style="width: 100%;display: flex;
justify-content: center;">
			@RenderBody()
		</div>
		<br />

	</section>

	

	<!--Import jQuery before materialize.js-->
	<script src="js/main.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
	<script src="js/materialize.min.js"></script>
	<script src="js/custom.js"></script>

	<!-- Toggle Script -->
	<script>
		const menuBtn = document.getElementById("mobileMenuBtn");
		const menu = document.getElementById("mobileMenu");
		menuBtn.addEventListener("click", () => {
			menu.classList.toggle("hidden");
		});
	</script>


	<!-- Swiper JS -->
	<script>
		document.addEventListener("DOMContentLoaded", function () {
			new Swiper(".mySwiper", {
				loop: true,
				autoplay: {
					delay: 4000,
					disableOnInteraction: false,
				},
				pagination: {
					el: ".swiper-pagination",
					clickable: true,
				},
				navigation: {
					nextEl: ".swiper-button-next",
					prevEl: ".swiper-button-prev",
				},
			});
		});
	</script>
	<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
</body>
@await RenderSectionAsync("Scripts", required: false)
</html>