@using GoEdu.ViewModel
@model IEnumerable<GoEdu.ViewModel.VMLectureSchedule>

@{
    ViewData["Title"] = "LectureSchedule";
}

<div class="container mx-auto mt-10 px-4">
    <!-- Heading -->
    <h1 class="text-center text-4xl font-extrabold text-indigo-800 mb-12 mt-5 mb-4">جدول الحصص</h1>

    <!-- Schedule Table -->
    <div class="overflow-x-auto shadow-lg rounded-lg bg-white mt-10">
        <table class="table-auto w-full text-center border-collapse">
            <thead class="bg-indigo-900">
                <tr>
                    <th class="px-6 py-3 text-lg text-white">ID</th>
                    <th class="px-6 py-3 text-lg text-white">عنوان الحصة</th>
                    <th class="px-6 py-3 text-lg text-white">اسم الكورس</th>
                    <th class="px-6 py-3 text-lg text-white">وقت الحصة</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-t border-gray-200 hover:bg-indigo-50 transition duration-200">
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.ID)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.Title)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.CourseName)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.LectureTime)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Back Button -->
    <div class="text-center mt-8">
        <a href="@Url.Action("DashBoard", "Student")" class="text-white bg-indigo-600 hover:bg-indigo-700 font-medium py-2 px-6 rounded-lg shadow transition duration-300">
            رجوع
        </a>
    </div>

</div>

