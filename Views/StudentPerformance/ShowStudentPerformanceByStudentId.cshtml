@model IEnumerable<GoEdu.ViewModel.VMStudentPerformance>

@{
    ViewData["Title"] = "ShowStudentPerformanceByStudentId";
}

<div class="container mx-auto mt-10 px-4">

    <!-- Heading Section -->
    <h1 class="text-center text-4xl font-extrabold text-indigo-800 mb-4">أداء الطالب</h1>

    <!-- Students Table Section -->
    <div class="overflow-x-auto shadow-lg rounded-lg bg-white">
        <table class="table-auto w-full text-center border-collapse">
            <thead class="bg-indigo-900 text-white">
                <tr>
                    <th class="px-6 py-3">ID الطالب</th>
                    <th class="px-6 py-3">اسم الطالب</th>
                    <th class="px-6 py-3">ID المحاضرة</th>
                    <th class="px-6 py-3">عنوان المحاضرة</th>
                    <th class="px-6 py-3">اسم الكورس</th>
                    <th class="px-6 py-3">تاريخ المحاضرة</th>
                    <th class="px-6 py-3">الدرجة</th>
                    <th class="px-6 py-3">إجراء</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr class="border-t border-gray-200 hover:bg-indigo-50 transition duration-200">
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.StudentId)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.StudentName)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.LectureID)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.LectureTitle)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.CourseName)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.LectureTime)</td>
                        <td class="px-6 py-3">@Html.DisplayFor(modelItem => item.Grade)</td>
                        <td class="px-6 py-3">
                            <!-- ممكن تضيف هنا لينك لتفاصيل أو تعديل لو محتاج -->
                        </td>
                    </tr>
                }
            </tbody>
        </table>
       
    </div>
    <div class="text-center mt-8">
        <a href="@Url.Action("DashBoard", "Student")" class="text-white bg-indigo-600 hover:bg-indigo-700 font-medium py-2 px-6 rounded-lg shadow transition duration-300">
            رجوع
        </a>
    </div>
</div>

